{% macro fractalStatuses(category) %}
|Status|Description|
|:-|:-|
{% for key, status in category -%}
|<span class="Status-label" style="background-color:{{ status.color }};border-color:{{ status.color }};">{{ status.label }}</span>|{{ status.description }}|
{% endfor %}
{% endmacro %}

{% macro fractalPaletteSwatch(category) %}
|Token| |Value|
|:-|:-|:-|
{% for item in (tokens | theoTokenCategory(category)) -%}
|<code>{{ item.name | theoTokenSass }}</code>|<span class="Fractal-Swatch" style="background-color:{{ item.value }}"></span>|{{ item.value }}|
{% endfor %}
{% endmacro %}